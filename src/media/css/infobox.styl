@import 'lib';

.infobox {
    border-top: 1px dashed $london-fog-gray;
    > div {
        padding: 15px 10px;
    }
    .not-rated {
        color: $medium-gray;
    }
    .average-rating {
        width: 100%;
    }
    ul.c {
        list-style-type: none;
        margin: -15px 0 0;
        padding: 0;
        li {
            float: left;
            margin: 15px 0 0;
            min-height: inherit;
            padding-right: 5px;
            width: 50%;
            &:nth-child(2n) {
                padding: 0 0 0 5px;
            }
        }
        a {
            display: block;
        }
    }
    // Show one button per line when text is longer. This class is set via JS.
    &.overflowing {
        ul.c li {
            padding-right: 0;
            width: 100%;
            &:nth-child(2n) {
                padding: 0;
            }
        }
    }
    dl {
        margin: 15px 0 0;
    }
    dt, dd {
        color: $text;
        display: inline-block;
    }
    dt {
        margin-right: 5px;
    }
}

@media $at-least-desktop {
    // Let's undo the overflow widths for desktop.
    .infobox {
        > div {
            padding: 24px 15px;
        }
        ul.c {
            margin: -12px;
            li {
                margin: 0;
                padding: 12px;
                width: 25%;
                &:nth-child(2n) {
                    padding: 12px;
                }
            }
        }
        &.overflowing {
            ul.c li {
                padding: 12px;
                width: 50%;
                &:nth-child(2n) {
                    padding: 12px;
                }
            }
        }
    }
}
